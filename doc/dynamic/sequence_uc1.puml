@startuml
'https://plantuml.com/sequence-diagram
Participant Main
Participant Game
Participant FileIO
Participant TextUI
Participant Player

Main -> Game: new()
Main -> Game: setup()
Game -> FileIO: new()
Game -> FileIO: readPlayerData()
FileIO --> Game: data

alt data.size()>0
loop (for-each)
Game -> Player: new(name, balance)
end

else
Game -> TextUI: new()

loop (while)
Game -> TextUI: getInput()
Game -> Player: new(input, startAmount)
end

end


